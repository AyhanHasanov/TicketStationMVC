@model TicketStationMVC.Data.Entities.Category

@{
    ViewData["Title"] = "Delete";
}


<div class="container-md my-2 custom-container">
    <div class="row">
        <p class="lead mt-5 mb-1">@Model.GetType().Name Delete</p>

        <div class="col d-flex justify-content-between align-items-center mt-1 mb-3">
            <div>
                <h1>@Model.Name</h1>
            </div>

            <div class="btn-group" role="group" aria-label="Basic outlined example">
                <a class="btn btn-primary" asp-action="Index" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Back to list">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <a class="btn btn-primary btn-success" asp-action="Edit" asp-route-id="@Model?.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit">
                    <i class="bi bi-pen"></i>
                </a>
            </div>
        </div>

    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <th>@Html.DisplayNameFor(model => model.ModifiedAt)</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Name)</td>
                <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                <td>@Html.DisplayFor(model => model.ModifiedAt)</td>
            </tr>
        </tbody>
    </table>

    <div class="row flex-column flex-nowrap">
        <div class="col mt-1">
            <div class="alert alert-danger mb-0" role="alert">
                Are you sure you want to delete this @Model?.GetType().Name?
            </div>
        </div>
        <div class="col mt-1 mb-3">
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete @Model?.GetType().Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                You're about to delete '@Html.DisplayFor(model=>model.Name)' @Model?.GetType().Name! This action cannot be undone! Would you like to continue?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" value="Delete"/>
                </form> 
            </div>
        </div>
    </div>
</div>
