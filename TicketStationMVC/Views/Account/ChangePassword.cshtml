@model TicketStationMVC.ViewModels.Account.AccountChangePassVM

@{
    ViewData["Title"] = "ChangePassword";
}
<style>

    #login-container {
        width: 40vw;
        padding: 1rem 1rem;
        border-radius: 10px;
        box-shadow: 0 0 80px 0 rgb(32 32 125 / 8%);
        margin-top: 2rem !important;
    }

        #login-container > :first-child {
            margin-top: 2rem;
        }

    #inner-form {
        width: 80%;
        margin: auto;
        margin-top: 2rem;
    }

    #login-group {
        margin-bottom: 2rem;
        margin-top: 0.5rem;
    }

        #login-group > input {
            width: 100%;
        }

    #register-group {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: center;
        align-content: center;
    }

    #inner-form .form-group {
        margin-bottom: 1rem;
    }

</style>


<div class="container-md my-2" id="login-container">
    <div class="row">
        <div>
            <h2 class="text-center">Change password</h2>
        </div>
        <div>
            <form method="post" asp-controller="Account" asp-action="ChangePassword">
                <div id="inner-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="OldPass" class="control-label">Enter your current password:</label>
                        <input asp-for="OldPass" class="form-control" />
                        <span asp-validation-for="OldPass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPass" class="control-label">Enter your new password:</label>
                        <input asp-for="NewPass" class="form-control" />
                        <span asp-validation-for="NewPass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassVerfication" class="control-label">Enter your new password again:</label>
                        <input asp-for="NewPassVerfication" class="form-control" />
                        <span asp-validation-for="NewPassVerfication" class="text-danger"></span>
                    </div>
                    <div class="form-group" id="login-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
